<!-- app/views/sessions/qr.html.erb -->

<div class="container text-center">


  <h1>Game Session</h1>



<div class="mb-4">
  <h2>Scan this QR to join:</h2>
</div>

  <%# Generate an inline SVG from @qr: %>
<div >
  <%= raw @qr.as_svg(
    offset: 0,
        color: "000",         # black modules
        shape_rendering: "crispEdges",
        module_size: 8,       # adjust to control overall size
        standalone: true
      ) %>

</div>


<div class="mt-3">
  <strong>UUID:</strong>
  <%= @session.uuid %>
</div>


<%= turbo_stream_from "game_session_#{@session.uuid}_host" %>

<div id="start-button" class="mt-5">
  <%= render 'start_button', session: @session, can_start: @session.guests.any? %>
</div>


<div class="row mt-5">
  <div class="col text-start">
    <div id="guest-list">
      <%= render 'guest_list', session: @session %>
    </div>
  </div>
  <div class="col text-start mt-1">
    <div id="guest-count">
      <%= render 'guest_count', session: @session %>
    </div>
  </div>
</div>


</div>
