<!-- app/views/sessions/qr.html.erb -->

<div class="container text-center">

  <h1>Game Session</h1>



<div class="mb-4">
  <h2>Scan this QR to join:</h2>
</div>

  <%# Generate an inline SVG from @qr: %>
<div >
  <%= raw @qr.as_svg(
        offset: 0,
        color: "000",         # black modules
        shape_rendering: "crispEdges",
        module_size: 8,       # adjust to control overall size
        standalone: true
      ) %>

</div>


<div class="mt-3">
  <strong>UUID:</strong>
  <%= @session.uuid %>
</div>


<button class="btn btn-outline-light btn-lg  rounded-5 mt-5"> START THE FUN </button>




<div class="row mt-5">
  <div class="col text-start">
 <ul class="avatar-list">
    <li> <div class="avatar-image shadow-sm"></div></li>
    <li> <div class="avatar-image shadow-sm"></div></li>
    <li> <div class="avatar-image shadow-sm"></div></li>
  </ul>
  </div>
    <div class="col text-start mt-1">
  <span class="ml-5">10 people in the session now</span>
  </div>
</div>


</div>
