<% if Rails.env.development? || Rails.env.test? %>
  <div class="debug-navigation" style="margin-top: 30px; padding: 10px; border: 2px dotted red; background: #ffeeee;">
    <h3>Debug Navigation</h3>
    <p>Current Stage: <%= @session.current_stage %></p>

    <% next_stage = case @session.current_stage
                    when 1 then 2
                    when 2 then 3
                    when 3 then 3.5
                    when 3.5 then 4
                    when 4 then 5
                    when 5 then 5.5
                    when 5.5 then 6
                    when 6 then 7
                    when 7 then 8
                    when 8 then 1
                    end %>

    <%= form_with url: advance_stage_path(@session.uuid, stage: next_stage), method: :post do |f| %>
      <%= f.submit "Advance to Stage #{next_stage}", class: "btn btn-warning" %>
    <% end %>
  </div>
<% end %>
